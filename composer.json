		"url": "git://github.com/mesinkasir/markdownuts.git"
	},
	"funding": [
	    {
		"type": "github",
		"url": "https://github.com/sponsors/mesinkasir"
	    },
	    {
		"type": "gumroad",
		"url": "https://creativitaz.gumroad.com/coffee"
	    },
	    {
		"type": "paypal",
