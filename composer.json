	    }
	],
    "keywords": ["php","markdown","flatfile","static-site-generator", "blog", "website", "markdown", "yaml", "yml", "flat-file-cms", "cms" , "content-managament-system", "content-management", "flat-file", "markdown-to-html", "simple"],
    "homepage": "https://markdownuts.axcora.com",
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8.0",
        "symfony/yaml": "^5.4"
    },
    "config": {
        "vendor-dir": "vendor"
    },
    "extra": {
        "config-files": [
            "config.yml"
        ],
        "web-files": [
            "index.php",
            "page.php",
            "posts.php",
            "tag.php",
            "tags.php",
            "generate_sitemap.php",
            "Parsedown.php",
            "README.md",
            "robots.txt"
        ]
    },
    "scripts": {
        "post-create-project-cmd": [
            "php -r \"array_map(function($f) { file_exists($f) || copy($f, getcwd() . '/' . basename($f)); }, glob(__DIR__ . '/web-files/*'));\""
        ]
    }
}
